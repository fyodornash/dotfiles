# export PATH="/home/michael/anaconda2/bin:$PATH"
source /home/michael/.bash_envvars.sh
source /home/michael/bin/bash_functions.sh
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/lib/oracle/18.3/client64/lib
